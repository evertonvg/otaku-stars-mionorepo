{
	"compilerOptions": {
		"types": [
			"node"
		],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src",
		"prisma",
		"src/types",
		"locales"
	],
	"exclude": [
		"node_modules"
	]
}