{
	"eslint.experimental.useFlatConfig": true,
	"eslint.validate": [
		"javascript",
		"typescript",
		"typescriptreact"
	],
	"editor.formatOnSave": true,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit"
	}
}