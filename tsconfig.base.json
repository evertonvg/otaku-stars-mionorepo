{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"apps/next/src/*"
			],
			"@api/*": [
				"apps/api/*"
			] // opcional para importações mais elegantes
		}
	}
}